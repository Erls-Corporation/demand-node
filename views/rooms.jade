- scripts.push("/ui/shared/scripts/controllers/rooms.js")

div.create.Module.FLC
  input(type='text', data-element='createBox', placeholder="Enter your desired room name here")
  |  
  button(data-action='create').lameButton Create
ul.Module.FLC
  - for (var slug in rooms.all())
    - var room = rooms.getFromSlug(slug)
    li
      a(href="/rooms/#{slug}") Room : #{room.name} 
      span Users : #{room.userCount} 
